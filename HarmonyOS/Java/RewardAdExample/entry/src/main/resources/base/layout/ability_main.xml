<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$color:white">

    <Text
        ohos:id="$+id:text_reward"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="$string:reward_ad_title"
        ohos:text_alignment="center"
        ohos:text_size="20fp"
        ohos:top_margin="16vp"/>

    <Button
        ohos:id="$+id:play_button"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:below="$id:text_reward"
        ohos:horizontal_center="true"
        ohos:text="$string:play_button"
        ohos:text_size="20fp"
        ohos:top_margin="20vp"/>

    <Button
        ohos:id="$+id:show_video_button"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:below="$id:play_button"
        ohos:horizontal_center="true"
        ohos:text="$string:watch_video_button_text"
        ohos:text_size="20fp"
        ohos:top_margin="20vp"/>

    <Text
        ohos:id="$+id:score_count_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:below="$id:show_video_button"
        ohos:horizontal_center="true"
        ohos:text_size="20fp"
        ohos:top_margin="30vp"/>
</DependentLayout>