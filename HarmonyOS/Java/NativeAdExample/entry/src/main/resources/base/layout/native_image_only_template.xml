<?xml version="1.0" encoding="utf-8"?>
<com.huawei.hms.ads.nativead.NativeView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:native_image_only_view"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="#FFFFFF">

    <DependentLayout
        ohos:id="$+id:background"
        ohos:height="match_content"
        ohos:width="match_parent">

        <com.huawei.hms.ads.nativead.MediaView
            ohos:id="$+id:ad_media"
            ohos:height="match_content"
            ohos:width="match_parent"/>

        <Text
            ohos:id="$+id:ad_flag"
            ohos:width="20vp"
            ohos:height="14vp"
            ohos:start_margin="10vp"
            ohos:bottom_margin="8vp"
            ohos:align_bottom="$id:ad_media"
            ohos:background_element="$graphic:native_flag_rounded_corners_shape"
            ohos:text_alignment="center"
            ohos:text="$string:ad_flag"
            ohos:text_color="#FFFFFF"
            ohos:text_size="10fp"
            ohos:text_weight="700" />

        <Button
            ohos:id="$+id:ad_call_to_action"
            ohos:width="72vp"
            ohos:height="26vp"
            ohos:align_bottom="$id:ad_media"
            ohos:align_parent_end="true"
            ohos:end_margin="52vp"
            ohos:bottom_margin="8vp"
            ohos:background_element="$graphic:emui_button_select"
            ohos:text_color="#FFFFFF"
            ohos:text_size="10fp"/>
    </DependentLayout>
</com.huawei.hms.ads.nativead.NativeView>