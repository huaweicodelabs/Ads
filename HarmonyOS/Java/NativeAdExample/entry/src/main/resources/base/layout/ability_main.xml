<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$color:white"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$color:white"
        ohos:orientation="vertical">

        <Text
            ohos:id="$+id:ad_display_form"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="$string:display_form"
            ohos:text_color="#000000"
            ohos:text_size="16fp"
            ohos:start_margin="16vp"
            ohos:end_margin="16vp"
            ohos:top_margin="16vp"/>

        <RadioContainer
            ohos:id="$+id:radio_group_display_form"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="16vp"
            ohos:top_margin="16vp"
            ohos:end_margin="16vp">

            <RadioButton
                ohos:id="$+id:radio_button_large"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:marked="true"
                ohos:text_size="14fp"
                ohos:text="$string:large_image_with_text"/>

            <RadioButton
                ohos:id="$+id:radio_button_three_small"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="8vp"
                ohos:text_size="14fp"
                ohos:text="$string:three_small_images_with_text"/>

            <RadioButton
                ohos:id="$+id:radio_button_small"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="8vp"
                ohos:text_size="14fp"
                ohos:text="$string:small_image_with_text"/>

            <RadioButton
                ohos:id="$+id:radio_button_video"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="8vp"
                ohos:text_size="14fp"
                ohos:text="$string:video_with_text"/>

            <RadioButton
                ohos:id="$+id:radio_button_app_download_button"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="8vp"
                ohos:text_size="14fp"
                ohos:text="$string:ad_with_app_download_button"/>
        </RadioContainer>

        <Button
            ohos:id="$+id:btn_load"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="$string:load_button_text"
            ohos:padding="$float:hiad_8_vp"
            ohos:horizontal_center="true"
            ohos:top_margin="20vp"
            ohos:text_size="18fp"
            ohos:text_color="#FFFFFF"
            ohos:background_element="#000000"
            ohos:layout_alignment="center"
            ohos:end_margin="16vp"/>

        <ScrollView
            ohos:id="$+id:scroll_view_ad"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:top_margin="16vp"/>
    </DirectionalLayout>
</ScrollView>